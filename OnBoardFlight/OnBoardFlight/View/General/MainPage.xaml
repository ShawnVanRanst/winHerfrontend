<Page
    x:Class="OnBoardFlight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnBoardFlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel x:Name="ContentPanel" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Text="Welcom to" VerticalAlignment="Center" FontSize="36"/>
        <TextBlock HorizontalAlignment="Center" Text="On-board flight" VerticalAlignment="Center" FontSize="72" Margin="0,0,0,40" FontWeight="Bold"/>
        <StackPanel x:Name="FormPanel" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="0,0,20,0" x:Name="LoginAsPassenger" Click="LoginAsPassenger_Click">
                <TextBlock TextAlignment="Center">I am a <LineBreak/>Passenger</TextBlock>
            </Button>
            <Button Margin="20,0,0,0" x:Name="LoginAsCrewMember" Click="LoginAsCrewMember_Click">
                <TextBlock TextAlignment="Center">I am a <LineBreak/>Crew member</TextBlock>
            </Button>
        </StackPanel>
    </StackPanel>
</Page>
