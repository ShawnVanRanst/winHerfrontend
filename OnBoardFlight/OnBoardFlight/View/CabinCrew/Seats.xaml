<Page
    x:Class="OnBoardFlight.View.CabinCrew.Seats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OnBoardFlight.View.CabinCrew"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///view/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="20 50 20 50">
                <TextBlock Text="Please enter the seatnumber of the passenger to move:"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <TextBox x:Name="seatInput1" 
                                     Text="{Binding Passenger1.Seat, Mode=TwoWay}"
                                     PlaceholderText="Seatnumber"
                                     Width="100" HorizontalAlignment="Left"/>
                    <Button Content="Search passenger" Command="{Binding SearchPassengerToMoveCommand1, Mode=TwoWay}" HorizontalAlignment="Center" Margin="20,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0 50 0 20">
                        <TextBlock Text="Passagier 1:" />
                        <TextBlock Text="{Binding Passenger1.FirstName}" Margin="10 0 5 0"/>
                        <TextBlock Text="{Binding Passenger1.LastName}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="20 50 20 50">
                <TextBlock Text="Please enter the new seatnumber:"/>
                <StackPanel Orientation="Horizontal" Margin="50,20,0,20">
                    <TextBox x:Name="seatNumber2" 
                                    Text="{Binding Passenger2.Seat, Mode=TwoWay}"
                                 PlaceholderText="Seatnumber"
                                 Width="100" HorizontalAlignment="Left"/>
                    <Button Content="Search Passenger" Command="{Binding SearchPassengerToMoveCommand2, Mode=TwoWay}" HorizontalAlignment="Center" Margin="20,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0 50 0 20">
                        <TextBlock Text="Passagier 2:" />
                        <TextBlock Text="{Binding Passenger2.FirstName}" Margin="10 0 5 0"/>
                        <TextBlock Text="{Binding Passenger2.LastName}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Assign new seat(s)" Command="{Binding SwitchPlacesCommand, Mode=TwoWay}"/>
        </StackPanel>
    </StackPanel>
</Page>
